@{
  Layout = "_Layout";
}

@using TreatShop.Models;
@model IEnumerable<TreatShop.Models.Flavor>

<h1>Here are all of our Flavors:</h1>

@if (Model.Any())
{
  <ul>
  @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}
else
{
  <h3>FLAVORS COMING SOON hopefully...</h3>
}

@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Add new Flavor", "Create")</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>