@{
  Layout = "_Layout";
}

@model TreatShop.Models.Treat

<h2>Add a Flavor below:</h2>

<h4>Add flavor to THIS treat: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Show all Treats", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>