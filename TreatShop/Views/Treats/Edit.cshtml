@{
  Layout = "_Layout";
}

@model TreatShop.Models.Treat

<h2>Edit treats below:</h2>

<h4>Edit this Treat: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.Label("Choose a Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Treats list", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>